<% unless document['description_tesim'].blank? %>
  <%= content_for :head do %>
    <meta name="description" content="<%= document['description_tesim'].first.split('\n\n').first %>">
  <% end %>
<% end %>

<%= render 'show_default', document: document %>

<% if document.file_sets.present? %>
  <% if can?(:read, document) %>
    <%= render 'files', document: document %>
  <% else %>
    <%= render 'access_denied', document: document %>
  <% end %>
<% end %>
